<h1>My Tasks</h1>
<ul>
    <% @tasks.each do |task| %>
        <li>
            <input type="checkbox" name="task" <%= "checked" if task.completed %>>
            <label for="task">
                <a href=<%= "/tasks/#{task.id}" %>><%= task.title %></a>
                <a href=<%= "/tasks/#{task.id}/delete" %>>delete</a>
            </label>
        </li>
    <% end %>
</ul>

<a href="">Add a new task</a>